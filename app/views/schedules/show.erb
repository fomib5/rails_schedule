<div class = "main_container">
  <h3>スケジュール詳細</h3>
  
  <%= render "shared/error", obj: @schedule %>
  
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @schedule.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= @schedule.start_date.strftime("%Y年%m月%d日") %></td>
    </tr>  
    <tr>
      <th>投稿日時</th>
      <td><%= @schedule.created_at.to_s(:date_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% if @schedule.all_date == "1" %>
          ◯
        <% end %>
      </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @schedule.memo %></td>
    </tr>
  </table>
  
  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
      <li><%= link_to "スケジュールを編集する", [:edit, @schedule] %></li>
      <li><%= link_to "スケジュールを削除", @schedule, method: :delete, data: { confirm: "本当に削除しますか？"} %></li>
    </ul>
  </div>
</div>
<footer>
  <h1>
    現在の日時：
    <%= Date.current.strftime('%Y年%m月%d日') %>
  </h1>
</footer>