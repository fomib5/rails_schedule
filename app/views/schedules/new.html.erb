<div class = "main_container">
  <h3>スケジュール新規作成</h3>
  
  <% if flash[:failure] %>
    <p class="alert alert_failure"><%= flash[:failure] %></p>
  <% end %>
  
  <%= render "shared/error", obj: @schedule %>
  
  <%= form_for @schedule do |f| %>
    <table>
      <tr>
        <th><%= f.label :title,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_date,"開始日" %></th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
      </tr>
      <tr>
        <th><%= f.label:all_date,"終日" %></th>
        <td>
          <%= f.check_box :all_date %>
          <br>終日の場合はチェックを入れます
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
    
    <div>
      <ul>
        <li><%= f.submit"スケジュールを新規登録する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
      </ul>
    </div>
  <% end %>
</div>
<footer>
  <h1>
    現在の日時：
    <%= Date.current.strftime('%Y年%m月%d日') %>
  </h1>
</footer>